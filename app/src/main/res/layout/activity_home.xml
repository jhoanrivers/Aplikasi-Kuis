<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b4f6d2"
    tools:context="com.company.jhoanrivers.belajarbahasainggris.HomeActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:fontFamily="cursive"
        android:lineSpacingExtra="8sp"
        android:text="Selamat Datang Di Aplikasi Kuis Bahasa Inggris"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Notification.Line2.Media"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="normal" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/textView"
        android:layout_marginTop="43dp"
        android:fontFamily="casual"
        android:text="Hallo,"
        android:textColor="#000000"
        android:typeface="normal" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:fontFamily="casual"
        android:lineSpacingExtra="8sp"
        android:text="Saya Jhoan River S, saya adalah mahasiswa di Institut Teknologi Del, ini adalah aplikasi pertama saya, ketika mengerjakan aplikasi ini, banyak hal baru yang saya dapat, meski sering error, saya penasaran melihat bagaimana suksesnya aplikasi saya."
        android:textColor="#000000"
        android:textSize="14sp"
        android:typeface="normal" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:fontFamily="casual"
        android:lineSpacingExtra="8sp"
        android:text="Aplikasi ini berisi 10 soal bahasa inggris dan setiap satu soal terdiri dari 4 pilihan. Setiap satu soal yang benar akan mendapat nilai 10 dan jika salah nilai tidak ditambahkan."
        android:textColor="#000000"
        android:textSize="14sp"
        android:typeface="normal" />

    <Button
        android:id="@+id/buttonquiz"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView5"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="21dp"
        android:layout_marginEnd="30dp"
        android:background="@android:drawable/button_onoff_indicator_on"
        android:text="Ke Kuis" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:fontFamily="casual"
        android:lineSpacingExtra="8sp"
        android:text="Selamat mencoba."
        android:textSize="14sp"
        android:textStyle="bold"
        android:typeface="serif" />
</RelativeLayout>
