<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.company.jhoanrivers.belajarbahasainggris.ResultActivity">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="Final Score"
        android:textSize="30sp"
        android:layout_marginStart="66dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/prevbutton" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView7"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/textView7"
        android:text=":"
        android:textSize="30sp" />

    <Button
        android:id="@+id/prevbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kembali ke Kuis"
        android:layout_alignBaseline="@+id/nextbutton"
        android:layout_alignBottom="@+id/nextbutton"
        android:layout_toStartOf="@+id/finalscore" />

    <Button
        android:id="@+id/nextbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lihat Jawaban"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/finalscore"
        android:layout_toEndOf="@+id/finalscore"
        android:layout_marginStart="18dp" />

    <TextView
        android:id="@+id/finalscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:text="0"
        android:textSize="60dp" />
    
</RelativeLayout>
